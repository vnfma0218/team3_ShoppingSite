<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
   <display-name>team3_ShoppingSite</display-name>
   <welcome-file-list>
      <welcome-file>index.html</welcome-file>
      <welcome-file>index.jsp</welcome-file>
   </welcome-file-list>
   <filter>
      <filter-name>SetUtf</filter-name>
      <filter-class>kr.or.bit.filter.setUtfFilter</filter-class>
   </filter>
   <filter-mapping>
      <filter-name>SetUtf</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
   <error-page>
      <error-code>400</error-code>
      <location>/WEB-INF/views/errors/Error400.jsp</location>
   </error-page>
   <error-page>
      <error-code>401</error-code>
      <location>/WEB-INF/views/errors/Error401.jsp</location>
   </error-page>
   <error-page>
      <error-code>403</error-code>
      <location>/WEB-INF/views/errors/Error403.jsp</location>
   </error-page>
   <error-page>
      <error-code>404</error-code>
      <location>/WEB-INF/views/errors/Error404.jsp</location>
   </error-page>
   <error-page>
      <error-code>500</error-code>
      <location>/WEB-INF/views/errors/Error500.jsp</location>
   </error-page>
   <resource-ref>
      <description>Connection Info</description>
      <res-ref-name>jdbc/oracle</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
   </resource-ref>
   <!-- <security-constraint>
      <web-resource-collection>
      <web-resource-name>SSL Redirect</web-resource-name>
      <url-pattern>/*</url-pattern>
      </web-resource-collection>
      <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
      </user-data-constraint>
   </security-constraint> -->
   
</web-app>